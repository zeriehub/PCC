@page "/venue/events"
@model PCC.Pages.VenueEventsModel
@{
    ViewData["Title"] = "Events & Gallery - PCC";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/venue-styles.css">
</head>
<body>
    <partial name="Shared/_VenueNavigation" />

    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1>Events & Gallery</h1>
            <p>Explore our beautiful venue and past celebrations</p>
        </div>
    </section>

    <!-- Upcoming Events -->
    <section class="upcoming-events">
        <div class="container">
            <h2>Upcoming Events</h2>
            <div class="events-grid">
                <div class="event-card">
                    <div class="event-date">
                        <span class="day">15</span>
                        <span class="month">JAN</span>
                    </div>
                    <div class="event-details">
                        <h3>New Year Gala</h3>
                        <p class="event-time">7:00 PM - 12:00 AM</p>
                        <p>Ring in the new year with an elegant celebration featuring live music, gourmet dining, and champagne toasts.</p>
                        <a href="/venue/contact" class="btn-link">Book Similar Event →</a>
                    </div>
                </div>
                <div class="event-card">
                    <div class="event-date">
                        <span class="day">22</span>
                        <span class="month">FEB</span>
                    </div>
                    <div class="event-details">
                        <h3>Business Networking Mixer</h3>
                        <p class="event-time">6:00 PM - 9:00 PM</p>
                        <p>Connect with local professionals in a sophisticated setting with cocktails and appetizers.</p>
                        <a href="/venue/contact" class="btn-link">Book Similar Event →</a>
                    </div>
                </div>
                <div class="event-card">
                    <div class="event-date">
                        <span class="day">08</span>
                        <span class="month">MAR</span>
                    </div>
                    <div class="event-details">
                        <h3>Spring Wedding Showcase</h3>
                        <p class="event-time">1:00 PM - 5:00 PM</p>
                        <p>Tour our venue and meet preferred vendors for your dream wedding. RSVP required.</p>
                        <a href="/venue/contact" class="btn-link">Book Similar Event →</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Gallery Section -->
    <section class="gallery-section">
        <div class="container">
            <h2>Our Gallery</h2>
            <div class="gallery-tabs">
                <button class="tab-btn active" data-category="all">All</button>
                <button class="tab-btn" data-category="weddings">Weddings</button>
                <button class="tab-btn" data-category="corporate">Corporate</button>
                <button class="tab-btn" data-category="parties">Parties</button>
            </div>

            <div class="gallery-grid">
                <div class="gallery-item" data-category="weddings">
                    <div class="gallery-image">
                        <div class="placeholder-image">Wedding Reception</div>
                    </div>
                    <div class="gallery-caption">
                        <h4>Elegant Wedding Reception</h4>
                        <p>Main ballroom setup for 250 guests</p>
                    </div>
                </div>
                <div class="gallery-item" data-category="corporate">
                    <div class="gallery-image">
                        <div class="placeholder-image">Corporate Event</div>
                    </div>
                    <div class="gallery-caption">
                        <h4>Corporate Conference</h4>
                        <p>Theater-style seating for presentations</p>
                    </div>
                </div>
                <div class="gallery-item" data-category="parties">
                    <div class="gallery-image">
                        <div class="placeholder-image">Birthday Party</div>
                    </div>
                    <div class="gallery-caption">
                        <h4>Milestone Birthday</h4>
                        <p>Festive cocktail party setup</p>
                    </div>
                </div>
                <div class="gallery-item" data-category="weddings">
                    <div class="gallery-image">
                        <div class="placeholder-image">Ceremony Space</div>
                    </div>
                    <div class="gallery-caption">
                        <h4>Wedding Ceremony</h4>
                        <p>Beautiful indoor ceremony space</p>
                    </div>
                </div>
                <div class="gallery-item" data-category="corporate">
                    <div class="gallery-image">
                        <div class="placeholder-image">Team Building</div>
                    </div>
                    <div class="gallery-caption">
                        <h4>Team Building Event</h4>
                        <p>Interactive workshop space</p>
                    </div>
                </div>
                <div class="gallery-item" data-category="parties">
                    <div class="gallery-image">
                        <div class="placeholder-image">Gala Dinner</div>
                    </div>
                    <div class="gallery-caption">
                        <h4>Charity Gala</h4>
                        <p>Formal dining arrangement</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Virtual Tour CTA -->
    <section class="virtual-tour-cta">
        <div class="container">
            <h2>Schedule a Tour</h2>
            <p>Experience our venue in person and envision your perfect event</p>
            <a href="/venue/contact" class="btn btn-primary">Request a Tour</a>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>PCC</h3>
                    <p>Creating memorable experiences since 2020</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/venue/about">About Us</a></li>
                        <li><a href="/venue/events">Gallery</a></li>
                        <li><a href="/venue/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact</h3>
                    <p>123 Event Street<br>
                    City, State 12345<br>
                    Phone: (555) 123-4567<br>
                    Email: info@@venuename.com</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 PCC. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
