@page "/venue"
@model PCC.Pages.VenueIndexModel
@{
    ViewData["Title"] = "PCC - Your Perfect Event Space";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/venue-styles.css">
</head>
<body>
    <partial name="Shared/_VenueNavigation" />
   
