                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <span class="stat-number">500</span>
                    <span class="stat-label">Guest Capacity</span>
                </div>
            </div>
            <div class="hero-buttons">
                <a href="/venue/availability" class="btn btn-secondary">Check Availability</a>
                <a href="/venue/contact" class="btn btn-primary">Schedule a Tour</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
