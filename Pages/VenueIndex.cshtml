@page "/venue"
@model PCC.Pages.VenueIndexModel
@{
    ViewData["Title"] = "PCC - Your Perfect Event Space";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/venue-styles.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <h1>PCC</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/venue" class="active">Home</a></li>
                <li><a href="/venue/about">About</a></li>
                <li><a href="/venue/events">Events & Gallery</a></li>
                <li><a href="/venue/availability">Check Availability</a></li>
                <li><a href="/venue/contact">Contact & Booking</a></li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Your Perfect Event Space</h1>
            <p>Host unforgettable moments in our premium venue</p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin-top: 2rem;">
                <a href="/venue/availability" class="btn btn-secondary">Check Availability</a>
                <a href="/venue/contact" class="btn btn-primary">Book Now</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="container">
            <h2>Why Choose Us</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="icon">üèõÔ∏è</div>
                    <h3>Elegant Space</h3>
                    <p>Beautifully designed interiors that create the perfect atmosphere for any occasion</p>
                </div>
                <div class="feature-card">
                    <div class="icon">üéâ</div>
                    <h3>Versatile Events</h3>
                    <p>Perfect for weddings, corporate events, parties, and special celebrations</p>
                </div>
                <div class="feature-card">
                    <div class="icon">üçΩÔ∏è</div>
                    <h3>Premium Catering</h3>
                    <p>Full-service catering with customizable menus to suit your taste</p>
                </div>
                <div class="feature-card">
                    <div class="icon">üìç</div>
                    <h3>Prime Location</h3>
                    <p>Conveniently located with ample parking and easy accessibility</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Capacity Section -->
    <section class="capacity">
        <div class="container">
            <h2>Venue Capacity</h2>
            <div class="capacity-grid">
                <div class="capacity-item">
                    <h3>Main Hall</h3>
                    <p class="number">500</p>
                    <p>Guests</p>
                </div>
                <div class="capacity-item">
                    <h3>Banquet Style</h3>
                    <p class="number">300</p>
                    <p>Guests</p>
                </div>
                <div class="capacity-item">
                    <h3>Theater Style</h3>
                    <p class="number">400</p>
                    <p>Guests</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
        <div class="container">
            <h2>Ready to Book Your Event?</h2>
            <p>Contact us today to schedule a tour and discuss your event needs</p>
            <a href="/venue/contact" class="btn btn-secondary">Get in Touch</a>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>PCC</h3>
                    <p>Creating memorable experiences since 2020</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/venue/about">About Us</a></li>
                        <li><a href="/venue/events">Gallery</a></li>
                        <li><a href="/venue/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact</h3>
                    <p>123 Event Street<br>
                    City, State 12345<br>
                    Phone: (555) 123-4567<br>
                    Email: info@@venuename.com</p>
                </div>
            </div>
            <div class="footer-bottom">
