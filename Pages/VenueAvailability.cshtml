@page "/venue/availability"
@model PCC.Pages.VenueAvailabilityModel
@{
    ViewData["Title"] = "Check Availability - PCC";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/venue-styles.css">
    <style>
        .availability-checker {
            background: var(--white);
            padding: 3rem;
            border-radius: 10px;
            box-shadow: var(--shadow-lg);
            max-width: 800px;
            margin: 0 auto;
        }

        .availability-form {
            display: grid;
            gap: 1.5rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .calendar-view {
            margin-top: 3rem;
            padding: 2rem;
            background: var(--light-bg);
            border-radius: 10px;
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 0.5rem;
        }

        .calendar-day {
            padding: 1rem;
            text-align: center;
            border-radius: 5px;
            background: var(--white);
            border: 2px solid var(--border-color);
            cursor: pointer;
            transition: all 0.3s;
        }

        .calendar-day.header {
            font-weight: 700;
            background: var(--primary-color);
            color: var(--white);
            cursor: default;
        }

        .calendar-day.available {
            border-color: #28a745;
            background: #d4edda;
        }

        .calendar-day.available:hover {
            background: #c3e6cb;
            transform: scale(1.05);
        }

        .calendar-day.booked {
            border-color: #dc3545;
            background: #f8d7da;
            cursor: not-allowed;
        }

        .calendar-day.selected {
            border-color: var(--accent-color);
            background: var(--accent-color);
            color: var(--white);
            font-weight: 700;
        }

        .calendar-day.empty {
            background: transparent;
            border: none;
            cursor: default;
        }

        .legend {
            display: flex;
            gap: 2rem;
            justify-content: center;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .legend-box {
            width: 30px;
            height: 30px;
            border-radius: 5px;
            border: 2px solid;
        }

        .legend-box.available {
            background: #d4edda;
            border-color: #28a745;
        }

        .legend-box.booked {
            background: #f8d7da;
            border-color: #dc3545;
        }

        .legend-box.selected {
            background: var(--accent-color);
            border-color: var(--accent-color);
        }

        .result-message {
            margin-top: 2rem;
            padding: 1.5rem;
            border-radius: 8px;
            text-align: center;
        }

        .result-message.success {
            background: #d4edda;
            border: 2px solid #28a745;
            color: #155724;
        }

        .result-message.error {
            background: #f8d7da;
            border: 2px solid #dc3545;
            color: #721c24;
        }

        .result-message.info {
            background: #d1ecf1;
            border: 2px solid #17a2b8;
            color: #0c5460;
        }

        .booking-summary {
            margin-top: 2rem;
            padding: 2rem;
            background: var(--light-bg);
            border-radius: 10px;
        }

        .booking-summary h3 {
            margin-bottom: 1.5rem;
            color: var(--primary-color);
        }

        .summary-details {
            display: grid;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem;
            background: var(--white);
            border-radius: 5px;
        }

        .summary-label {
            font-weight: 600;
            color: var(--gray);
        }

        .summary-value {
            color: var(--primary-color);
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .form-row {
                grid-template-columns: 1fr;
            }

            .calendar-day {
                padding: 0.5rem;
                font-size: 0.9rem;
            }

            .availability-checker {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="logo">
                <h1>PCC</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/venue">Home</a></li>
                <li><a href="/venue/about">About</a></li>
                <li><a href="/venue/events">Events & Gallery</a></li>
                <li><a href="/venue/availability" class="active">Check Availability</a></li>
                <li><a href="/venue/contact">Contact & Booking</a></li>
            </ul>
        </div>
    </nav>

    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1>Check Availability</h1>
            <p>Find the perfect date for your event</p>
        </div>
    </section>

    <!-- Availability Checker Section -->
    <section class="contact-section">
        <div class="container">
            <div class="availability-checker">
                <h2>Check Date Availability</h2>
                <p style="color: var(--gray); margin-bottom: 2rem;">
                    Select your preferred date and event details to check if the venue is available.
                </p>

                <form class="availability-form" method="post">
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="SelectedDate">Event Date *</label>
                            <input asp-for="SelectedDate" type="date" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                            <span asp-validation-for="SelectedDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="EventType">Event Type *</label>
                            <select asp-for="EventType" required>
                                <option value="">Select event type</option>
                                <option value="wedding">Wedding</option>
                                <option value="corporate">Corporate Event</option>
                                <option value="birthday">Birthday Party</option>
                                <option value="anniversary">Anniversary</option>
                                <option value="gala">Gala/Fundraiser</option>
                                <option value="other">Other</option>
                            </select>
                            <span asp-validation-for="EventType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="GuestCount">Estimated Guest Count *</label>
                            <input asp-for="GuestCount" type="number" min="1" required placeholder="e.g., 150">
                            <span asp-validation-for="GuestCount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TimeSlot">Preferred Time Slot *</label>
                            <select asp-for="TimeSlot" required>
                                <option value="">Select time slot</option>
                                <option value="morning">Morning (9:00 AM - 12:00 PM)</option>
                                <option value="afternoon">Afternoon (12:00 PM - 5:00 PM)</option>
                                <option value="evening">Evening (5:00 PM - 10:00 PM)</option>
                                <option value="full-day">Full Day</option>
                            </select>
                            <span asp-validation-for="TimeSlot" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary" style="width: 100%;">Check Availability</button>
                </form>

                @if (Model.CheckPerformed)
                {
                    @if (Model.IsAvailable)
                    {
                        <div class="result-message success">
                            <h3>✓ Great News! The Venue is Available</h3>
                            <p>Your selected date and time slot is currently available. Reserve it now before it's gone!</p>
                        </div>

                        <div class="booking-summary">
                            <h3>Booking Summary</h3>
                            <div class="summary-details">
                                <div class="summary-item">
                                    <span class="summary-label">Event Date:</span>
                                    <span class="summary-value">@Model.SelectedDate?.ToString("MMMM dd, yyyy")</span>
                                </div>
                                <div class="summary-item">
                                    <span class="summary-label">Event Type:</span>
                                    <span class="summary-value">@Model.EventType</span>
                                </div>
                                <div class="summary-item">
                                    <span class="summary-label">Guest Count:</span>
                                    <span class="summary-value">@Model.GuestCount guests</span>
                                </div>
                                <div class="summary-item">
                                    <span class="summary-label">Time Slot:</span>
                                    <span class="summary-value">@Model.GetTimeSlotDisplay()</span>
                                </div>
                            </div>
                            <a href="/venue/contact?date=@Model.SelectedDate?.ToString("yyyy-MM-dd")&eventType=@Model.EventType&guests=@Model.GuestCount&timeSlot=@Model.TimeSlot" class="btn btn-primary" style="width: 100%;">
                                Proceed to Booking
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="result-message error">
                            <h3>✗ Sorry, Not Available</h3>
                            <p>@Model.UnavailableReason</p>
                        </div>

                        <div class="result-message info">
                            <h4>Alternative Options</h4>
                            <p>Please select a different date or contact us to discuss alternative arrangements.</p>
                            <div style="margin-top: 1rem; display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                                <a href="/venue/contact" class="btn btn-secondary">Contact Us</a>
                                <button type="button" onclick="window.location.reload()" class="btn btn-primary">Try Another Date</button>
                            </div>
                        </div>
                    }
                }

                <!-- Calendar View -->
                <div class="calendar-view">
                    <div class="calendar-header">
                        <h3>@Model.CurrentMonth.ToString("MMMM yyyy")</h3>
                        <div>
                            <form method="get" style="display: inline;">
                                <input type="hidden" name="month" value="@Model.CurrentMonth.AddMonths(-1).ToString("yyyy-MM-dd")" />
                                <button type="submit" class="btn btn-secondary" style="padding: 0.5rem 1rem;">← Previous</button>
                            </form>
                            <form method="get" style="display: inline; margin-left: 0.5rem;">
                                <input type="hidden" name="month" value="@Model.CurrentMonth.AddMonths(1).ToString("yyyy-MM-dd")" />
                                <button type="submit" class="btn btn-secondary" style="padding: 0.5rem 1rem;">Next →</button>
                            </form>
                        </div>
                    </div>

                    <div class="calendar-grid">
                        <div class="calendar-day header">Sun</div>
                        <div class="calendar-day header">Mon</div>
                        <div class="calendar-day header">Tue</div>
                        <div class="calendar-day header">Wed</div>
                        <div class="calendar-day header">Thu</div>
                        <div class="calendar-day header">Fri</div>
                        <div class="calendar-day header">Sat</div>

                        @foreach (var day in Model.GetCalendarDays())
                        {
                            @if (day.IsEmpty)
                            {
                                <div class="calendar-day empty"></div>
                            }
                            else
                            {
                                <div class="calendar-day @day.CssClass"
                                     title="@day.Tooltip"
                                     @(day.IsAvailable ? $"onclick=\"document.querySelector('[name=SelectedDate]').value='{day.Date:yyyy-MM-dd}'; window.scrollTo(0, 0);\"" : "")>
                                    <strong>@day.Date.Day</strong>
                                </div>
                            }
                        }
                    </div>

                    <div class="legend">
                        <div class="legend-item">
                            <div class="legend-box available"></div>
                            <span>Available</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-box booked"></div>
                            <span>Booked</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-box selected"></div>
                            <span>Selected</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>PCC</h3>
                    <p>Creating memorable experiences since 2020</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/venue/about">About Us</a></li>
                        <li><a href="/venue/events">Gallery</a></li>
                        <li><a href="/venue/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact</h3>
                    <p>123 Event Street<br>
                    City, State 12345<br>
                    Phone: (555) 123-4567<br>
                    Email: info@@venuename.com</p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 PCC. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
